  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "commonjs",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,  // 解决 @types/webpack 定义文件报错的问题
    "baseUrl": "./src",
    "outDir": "./dist",
  },
  "include": [
    "src/**/*"
  ]
}
